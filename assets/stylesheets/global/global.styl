@import '../base/fonts'

box-sizing-reset()

\:root
  font-size 100%
html
  height 100%
body
  position relative
  height auto !important
  height 100%
  min-height 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

  background url("/images/bg.jpg") no-repeat center top
  background-size cover
  background-attachment fixed
  color black

  f-size('roman', 16px, 24px)


*:focus, *:active
  outline none

a, a:hover, a:focus
  color inherit
  text-decoration none
  cursor pointer

a
  color: inherit
  text-decoration: none
  &.link:hover
    text-decoration: underline

ul, ol
  margin 0
  padding 0
  list-style none





