@import '../base/fonts'

box-sizing-reset()

\:root
  font-size 100%
html
  height 100%
  width 100%
body
  position relative
  height auto !important
  height 100%
  min-height 100%
  width 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  font-family: 'HelveticaNeueCyr', font-stack('Helvetica')
  background url("/images/bg.jpg") no-repeat center top
  background-size cover
  background-attachment fixed
  color black

  f-size('roman', 16px, 20px)


*:focus, *:active
  outline none

a, a:hover, a:focus
  color inherit
  text-decoration none
  cursor pointer

a
  color: inherit
  text-decoration: none
  &.link:hover
    text-decoration: underline

ul, ol
  margin 0
  padding 0
  list-style none

h1, h2, h3, h4, strong
  font-weight 500

article

  h1, h2
    f-size('thin', 28px, 36px)
    margin rem(25px 0 16px)

  h3
    f-size('roman', 22px, 36px)
    margin rem(25px 0 16px)

  p
    margin rem(16px 0)

  a
    text-decoration underline
    &:hover
      text-decoration none






