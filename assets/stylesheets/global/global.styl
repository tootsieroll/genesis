@import '../base/fonts'

box-sizing-reset()

\:root
  font-size 100%
html
  height 100%
  width 100%
body
  position relative
  height auto !important
  height 100%
  min-height 100%
  width 100%
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  font-family: 'HelveticaNeueCyr', font-stack('Helvetica')
  color white
  background black

  f-size('roman', 16px, 20px)

  background url("/images/bg-projects.jpg") no-repeat center top
  background-size cover
  background-attachment fixed

  &.production
    background-image url("/images/bg.jpg")
    color black


*:focus, *:active
  outline none

a, a:hover, a:focus
  color inherit
  text-decoration none
  cursor pointer

a
  color: inherit
  text-decoration: none
  &.link:hover
    text-decoration: underline

ul, ol
  margin 0
  padding 0
  list-style none

h1, h2, h3, h4, strong
  font-weight 500

article

  f-size('roman', 16px, 20px)

  h1, h2
    f-size('thin', 28px, 36px)
    margin rem(25px 0 16px)

  h3
    f-size('roman', 22px, 36px)
    margin rem(25px 0 16px)
    color red

  p
    margin rem(16px 0)

  a
    text-decoration underline
    &:hover
      text-decoration none

  img
    max-width 100%!important
    height auto!important
    vertical-align middle


.video-background
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  overflow hidden
  display none
  z-index 0
  video
    min-width 100%
    min-height 100%
    position absolute
    left 50%
    top 50%
    transform translate3d(-50%, -50%, 0)

  @media all and (min-width: $screen-sm)
    display block

.mask
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  overflow hidden
  z-index 1


.group-description
  width 50%
  max-width rem(390px)
  float right
  margin-right rem(110px)
  margin-top rem(580px)
  position relative
  z-index 10


